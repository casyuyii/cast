{
  "name": "cast",
  "packageManager": "bun@1.2.2",
  "private": true,
  "version": "1.0.0",
  "description": "test monorepo",
  "scripts": {
    "client:dev": "bun --filter client dev",
    "client:build": "bun --filter client build",
    "client:docker": "docker build -f ./docker/client.Dockerfile -t client .",
    "server:dev": "bun --filter server dev",
    "server:build": "bun --filter server build",
    "server:docker": "docker build -f ./docker/server.Dockerfile -t server .",
    "blog:dev": "bun --filter blog dev",
    "blog:build": "bun --filter blog build",
    "blog:docker": "docker build -f ./docker/blog.Dockerfile -t blog .",
    "docker:up": "docker compose -f ./docker/compose.dev.yaml up",
    "docker:down": "docker compose -f ./docker/compose.dev.yaml down",
    "docker:prod": "docker compose -f ./docker/compose.prod.yaml up -d --build --force-recreate"
  },
  "keywords": [],
  "author": "cas",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.36.0",
    "@next/eslint-plugin-next": "^15.4.5",
    "@tailwindcss/typography": "^0.5.18",
    "eslint": "^9.36.0",
    "eslint-config-next": "15.4.5",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.1"
  }
}
